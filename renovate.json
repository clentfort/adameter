{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended"],
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	},
	"packageRules": [
		{
			"matchPackageNames": [
				"fbtee",
				"@nkzw/babel-preset-fbtee",
				"@nkzw/eslint-plugin-fbtee"
			],
			"groupName": "fbtee-monorepo"
		},
		{
			"matchUpdateTypes": ["minor", "patch"],
			"automerge": true
		}
	]
}
